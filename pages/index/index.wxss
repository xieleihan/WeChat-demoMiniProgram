/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.manga {
  display: flex;
  margin: 10px;
  border: 1px solid black;
  border-radius: 10px;
  position: relative;
  padding: 5px;
}

.manga image {
  width: 100px;
  min-width: 100px;
  border-radius: 10px;
}

.manga text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 65vw;
  margin-left: 10px;
  font-weight: bold;
}

.manga .author {
  position: absolute;
  bottom: 0px;
  right: 0px;
}